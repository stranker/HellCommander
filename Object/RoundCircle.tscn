export var max_circle_level : int = 5
export var circle_level : int = 0
export var circle_damage : float = 0.5
var players_out = []

func _on_Timer_timeout():
	if circle_level < max_circle_level:
		reduce_circle()
	else:
		$Timer.stop()
	pass # Replace with function body.

func reduce_circle():
	circle_level += 1
	var circle = $CollisionShape2D.shape as CircleShape2D
	circle.radius /= 1.5
	$Sprite.scale /= 1.5
	var new_pos = Vector2()
	new_pos.x = $CollisionShape2D.position.x + rand_range(-circle.radius,circle.radius)
	new_pos.y = $CollisionShape2D.position.y + rand_range(-circle.radius,circle.radius)
	$CollisionShape2D.position = new_pos
	$Sprite.position = new_pos
	pass

func _on_DamageTimer_timeout():
	for player in players_out:
		player.take_circle_damage(circle_damage)
	pass # Replace with function body.
"

